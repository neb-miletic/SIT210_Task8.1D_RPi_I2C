import time
import board
import busio
import adafruit_am2320

# create the I2C shared bus
i2c = busio.I2C(board.SCL, board.SDA)
am = adafruit_am2320.AM2320(i2c)

while True:
    if am.temperature < 20:
        print("Temperature is under 20 degree!")
    elif am.temperature < 10:
        print("It is chilly out there!")
    elif am.temperature > 20:
        print("it is room temperature. Nice and cosy.")
    elif am.temperature > 28:
        print("It is getting hot here!")
    
    if am.relative_humidity < 50:
         print("Air is a  bit dry.")
    elif am.relative_humidity > 50 or am.relative_humidity < 80:
         print("Air humodity is perfect.")
    else:
         print("It is too humid now!")
        
    
 
    time.sleep(2)

